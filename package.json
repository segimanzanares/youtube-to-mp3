{
  "name": "youtube-to-mp3",
  "version": "1.1.10",
  "main": "app/main.js",
  "build": {
    "appId": "Youtube2MP3"
  },
  "type": "module",
  "scripts": {
    "view": "cd renderer && ng serve",
    "electron": "cd renderer && ng build && cd .. && electron .",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "private": true,
  "dependencies": {
    "@distube/ytdl-core": "^4.14.4",
    "electron-store": "^10.0.0",
    "fluent-ffmpeg": "^2.1.3",
    "mime": "^4.0.4",
    "node-id3": "^0.2.6",
    "queue": "^7.0.0",
    "sanitize-filename": "^1.6.3",
    "ytdl-core": "^4.11.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "electron": "^31.3.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "ignore": [
          "renderer",
          ".nvmrc",
          ".gitignore",
          ".editorconfig",
          ".vscode"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Youtube 2 MP3",
            "author": "Segi Manzanares",
            "description": "App for downloading mp3 audio from Youtube videos."
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "productName": "Youtube 2 MP3",
              "description": "App for downloading mp3 audio from Youtube videos.",
              "depends": [
                "ffmpeg"
              ],
              "icon": "./app/assets/images/icon.png",
              "maintainer": "Segi Manzanares",
              "homepage": "https://github.com/segimanzanares"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
